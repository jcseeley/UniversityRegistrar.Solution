@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Department>;

<h2>Departments:</h2>
<hr />

@if (@Model.Count == 0)
{
  <h3>No Departments Added</h3>
  <hr />
}

@foreach(Department department in Model)
{
  <h5>@Html.ActionLink($"{department.DepartmentName}", "Details", new { id = department.DepartmentId })</h5>
  <hr />
}

<h4>@Html.ActionLink("Add New Department", "Create")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>