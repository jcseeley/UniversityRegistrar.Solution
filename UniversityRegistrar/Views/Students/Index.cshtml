@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Student>;

<h2>Students:</h2>
<hr />

@if (@Model.Count == 0)
{
  <h3>No Students Added.</h3>
  <hr />
}

@foreach(Student student in Model)
{
  <h5>@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId })</h5>
  <hr />
}

<h4>@Html.ActionLink("Add New Student", "Create")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>